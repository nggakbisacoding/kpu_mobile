<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f0f0f0"
    tools:context=".FormActivity">


    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/top_navbar"
        />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="24dp"
            android:layout_marginHorizontal="24dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="8dp"
                />

            <TextView
                android:id="@+id/name_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="12dp"
                android:paddingHorizontal="12dp"
                style="@style/defaultText"
                android:textSize="12sp"
                android:inputType="text"
                android:fontFamily="@font/poppins_regular"
                android:background="@drawable/input_alamat"
                android:drawableStart="@drawable/profile"
                android:drawablePadding="12dp"
                android:elevation="3dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NIK"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="8dp"
                />
            <TextView
                android:id="@+id/NIK_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="12dp"
                android:paddingHorizontal="12dp"
                style="@style/defaultText"
                android:textSize="12sp"
                android:inputType="text"
                android:fontFamily="@font/poppins_regular"
                android:background="@drawable/input_alamat"
                android:drawableStart="@drawable/id_card"
                android:drawablePadding="12dp"
                android:elevation="3dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kontak"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="8dp"
                />
            <TextView
                android:id="@+id/contact_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="12dp"
                android:paddingHorizontal="12dp"
                style="@style/defaultText"
                android:textSize="12sp"
                android:inputType="text"
                android:fontFamily="@font/poppins_regular"
                android:background="@drawable/input_alamat"
                android:drawableStart="@drawable/telephone"
                android:drawablePadding="12dp"
                android:elevation="3dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gender"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="8dp"
                />
            <TextView
                android:id="@+id/gender_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="12dp"
                android:paddingHorizontal="12dp"
                style="@style/defaultText"
                android:textSize="12sp"
                android:inputType="text"
                android:fontFamily="@font/poppins_regular"
                android:background="@drawable/input_alamat"
                android:drawableStart="@drawable/gender"
                android:drawablePadding="12dp"
                android:elevation="3dp"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tanggal Penginputan"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="8dp"
                />
            <TextView
                android:id="@+id/date_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="10dp"
                style="@style/defaultText"
                android:textSize="12sp"
                android:fontFamily="@font/poppins_regular"
                android:background="@drawable/input_alamat"
                android:textAlignment="textStart"
                android:drawableStart="@drawable/date"
                android:drawablePadding="12dp"
                android:paddingHorizontal="12dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alamat"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="8dp"
                />
            <TextView
                android:id="@+id/address_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="10dp"
                style="@style/defaultText"
                android:textSize="12sp"
                android:fontFamily="@font/poppins_regular"
                android:background="@drawable/input_alamat"
                android:textAlignment="textStart"
                android:drawableStart="@drawable/map"
                android:drawablePadding="12dp"
                android:paddingHorizontal="12dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gambar Bukti"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="8dp"
                />

            <LinearLayout
                android:id="@+id/file"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_strip"
                android:gravity="center"
                android:orientation="vertical"
                >


                <ImageView
                    android:id="@+id/image_img"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />

            </LinearLayout>


        </LinearLayout>

    </ScrollView>


</LinearLayout>